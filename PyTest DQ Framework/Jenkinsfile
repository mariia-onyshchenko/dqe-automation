pipeline {
    agent any

    environment {
        POSTGRES_SECRET = credentials('jenkins-postgres-credentials')
    }

    stages {

        stage('Install Dependencies') {
            steps {
                sh """
                    cd 'PyTest DQ Framework'
                    
                    # Create virtual environment
                    python3 -m venv ../venv

                    # Upgrade pip
                    ../venv/bin/pip install --upgrade pip

                    # Install requirements
                    ../venv/bin/pip install -r requirements.txt
                """
            }
        }

        stage('Run Tests') {
            steps {
                sh """
                    cd 'PyTest DQ Framework'

                    # Add workspace root to PYTHONPATH so Python can find data_dev
                    export PYTHONPATH=\$PYTHONPATH:\$(pwd)/..

                    # Run pytest with virtualenv Python
                    ../venv/bin/python -m pytest tests -m "parquet_data" \
                        --db_host="postgres" \
                        --db_port="5432" \
                        --db_name="mydatabase" \
                        --db_user=$POSTGRES_SECRET_USR \
                        --db_password=$POSTGRES_SECRET_PSW \
                        --html=html_report/report.html
                """
            }
        }

        stage('Archive Test Report') {
            steps {
                archiveArtifacts artifacts: 'PyTest DQ Framework/html_report/**', allowEmptyArchive: true

                publishHTML(target: [
                    allowMissing: false,
                    keepAll: true,
                    reportDir: 'PyTest DQ Framework/html_report',
                    reportFiles: 'report.html',
                    reportName: 'HTML Test Report'
                ])
            }
        }
    }
}
